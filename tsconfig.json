{
	"compilerOptions": {
		"baseUrl": ".",
		"outDir": "./dist/",
		"rootDir": "./src/",
		"strict": true,
		"noImplicitReturns": true,
		"noImplicitAny": true,
		"moduleResolution": "node",
		"module": "commonjs",
		"target": "es2021",
		"allowJs": true
	},
	"compilerSection": {
		"types": ["node"]
	},
	"ts-node": {
		"files": true
	},
	"include": ["./src/**/*", "environment.d.ts"]
}
